<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_fragment_add_patient_coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBackgroundColor"
    android:orientation="vertical">


    <TextView
        android:id="@+id/currentLocationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_location_24dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_location_24dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Current Location"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
        android:drawableLeft="@drawable/ic_search_grey_24dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_search_grey_24dp"
        android:gravity="center_vertical"
        android:hint="Select Location"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/grey_28" />
</LinearLayout>